model User {
  id        String   @id @default(dbgenerated()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  firstName String
  lastName  String?
  email     String   @unique
  posts     Post[]
}

model Post {
  id        String   @id @default(dbgenerated()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  title     String
  body      String?
  views     Int      @default(0)
  author    User?    @relation(fields: [authorId], references: [id])
  authorId  String?  @db.ObjectId
}