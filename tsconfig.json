{
    "compilerOptions": {
        "target": "es2019",
        "baseUrl": "src",
        "outDir": "dist",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": [
            "es2019"
        ],
        "strict": true,
        "esModuleInterop": true,
        "paths": {
            "@/*": ["./*"]
        }
    },
    "include": [
        "./src/**/*.ts",
        "./test/**/*.ts"
    ]
}